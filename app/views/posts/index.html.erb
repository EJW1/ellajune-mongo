<h1>Listing posts</h1>

<% if current_user %>
  <%= link_to "Create a Post!", new_post_path %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Link</th>
    <th>Posted By:</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.link %></td>
    <td><%= post.user.name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
